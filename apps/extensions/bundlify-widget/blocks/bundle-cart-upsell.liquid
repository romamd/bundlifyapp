<div id="bundlify-cart-upsell"
     data-shop="{{ shop.permanent_domain }}"
     data-trigger="cart_page"
     style="margin: 20px 0;">
  <div class="bundlify-bundles"></div>
</div>

{% schema %}
{
  "name": "Bundlify Cart Upsell",
  "target": "section",
  "javascript": "bundlify.js",
  "stylesheet": "bundlify.css",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Upsell heading",
      "default": "You might also like"
    }
  ]
}
{% endschema %}
